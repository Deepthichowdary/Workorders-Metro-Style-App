            <TextBlock x:ConnectionId='11' Grid.Column="0" HorizontalAlignment="Left" Margin="89,545,0,176" TextWrapping="Wrap" Text="Product Name :"  Height="32" Width="212"                                               FontSize="20" FontWeight="Bold"/>
