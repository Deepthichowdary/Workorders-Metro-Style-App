            <TextBlock x:ConnectionId='8' Grid.Column="0" HorizontalAlignment="Left" Margin="89,315,0,406" TextWrapping="Wrap" Text="City :"  Height="32" Width="212"                                               FontSize="20" FontWeight="Bold"/>
            <TextBlock x:ConnectionId='9' Grid.Column="0" HorizontalAlignment="Left" Margin="89,396,0,325" TextWrapping="Wrap" Text="State :"  Height="32" Width="212"                                               FontSize="20" FontWeight="Bold"/>
            <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Height="64" Margin="30,379,0,0" VerticalAlignment="Top" Width="435" Padding="1" Grid.Column="1">
                <TextBlock x:ConnectionId='18' HorizontalAlignment="Left" Text="Work Order Value2" Margin="8,8,0,8" TextWrapping="Wrap" Width="415"                                               FontSize="20" FontWeight="Bold" RenderTransformOrigin="1.873,2.344"/>
            </Border>
            <TextBlock x:ConnectionId='10' Grid.Column="0" HorizontalAlignment="Left" Margin="89,476,0,245" TextWrapping="Wrap" Text="Zip :"  Height="32" Width="212"                                               FontSize="20" FontWeight="Bold"/>
            <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Height="64" Margin="31,458,0,0" VerticalAlignment="Top" Width="435" Padding="1" Grid.Column="1">
                <TextBlock x:ConnectionId='17' HorizontalAlignment="Left" Text="Work Order Value2" Margin="8,8,0,8" TextWrapping="Wrap" Width="415"                                               FontSize="20" FontWeight="Bold" RenderTransformOrigin="1.873,2.344"/>
            </Border>
            <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Height="64" Margin="29,148,0,0" VerticalAlignment="Top" Width="435" Padding="1" Grid.Column="1">
