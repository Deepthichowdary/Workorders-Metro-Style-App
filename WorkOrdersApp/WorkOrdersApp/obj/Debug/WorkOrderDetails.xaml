            </Border>
            <TextBlock HorizontalAlignment="Left" Margin="341,10,0,0" TextWrapping="Wrap" Text="Details" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="39" Width="250" FontSize="36" FontFamily="Castellar"/>
        </Grid>
        <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Height="64" Margin="477,310,0,0" VerticalAlignment="Top" Width="435" Padding="1" Grid.ColumnSpan="2">
