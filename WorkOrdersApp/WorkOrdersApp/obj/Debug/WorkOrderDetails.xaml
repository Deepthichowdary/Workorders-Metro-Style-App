            </Border>
            <TextBlock x:ConnectionId='12' Grid.Column="0" HorizontalAlignment="Left" Margin="89,644,0,77" TextWrapping="Wrap" Text="Product Details :"  Height="32" Width="212"                                               FontSize="20" FontWeight="Bold"/>
