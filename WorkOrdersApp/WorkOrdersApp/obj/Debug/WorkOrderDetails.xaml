            <TextBlock x:ConnectionId='3' HorizontalAlignment="Left" Text="Work Order Value2" Margin="8,7,0,9" TextWrapping="Wrap" Width="415"                                               FontSize="20" FontWeight="Bold" RenderTransformOrigin="1.873,2.344"/>
