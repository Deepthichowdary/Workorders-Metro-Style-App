<Page
    x:Class="WorkOrdersApp.WorkOrderTabs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkOrdersApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.TopAppBar>
        <AppBar>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Button Content="WorkOrderDetails" Width="140" Height="80"/>
                    <Button Content="Tasks" Width="140" Height="80"/>
                    <Button Content="Comments" Width="140" Height="80"/>
                </StackPanel>
                <AppBarButton Label="Done" Icon="ClosePane" HorizontalAlignment="Right"/>
            </Grid>
        </AppBar>
    </Page.TopAppBar>
    <Grid>
        
    </Grid>
    
</Page>

